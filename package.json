{
  "name": "updtr",
  "version": "3.0.0",
  "description": "Update outdated npm modules with zero painâ„¢",
  "main": "dist",
  "scripts": {
    "pretest": "npm run fixtures:ensure",
    "test": "cross-env FORCE_COLOR=1 jest --coverage",
    "test:watch": "jest --watch",
    "posttest": "npm run lint",
    "lint": "eslint --ignore-path ./.gitignore src test",
    "build": "cross-env NODE_ENV=production rollup -c",
    "prepublishOnly": "npm run build && node ./bin/updtr --help",
    "release": "standard-version",
    "fixtures:ensure": "babel-node ./test/helpers/setupFixtures.js",
    "fixtures:rebuild": "babel-node ./test/helpers/cleanupFixtures.js && npm run fixtures:ensure"
  },
  "author": "developers@peerigon.com",
  "license": "Unlicense",
  "bin": {
    "updtr": "./bin/updtr"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "ansi-escapes": "^3.1.0",
    "chalk": "^2.4.1",
    "cli-cursor": "^2.1.0",
    "cli-spinners": "^1.0.0",
    "detect-indent": "^5.0.0",
    "es6-error": "^4.0.2",
    "pify": "^4.0.0",
    "semver": "^5.3.0",
    "string-width": "^2.0.0",
    "unicons": "0.0.3",
    "yargs": "^12.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "clone": "^2.1.1",
    "cross-env": "^5.0.1",
    "eslint": "^5.6.1",
    "eslint-config-peerigon": "^15.0.2",
    "eslint-plugin-jest": "^21.24.1",
    "jest": "^23.6.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.66.2",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-node-resolve": "^3.0.0",
    "sinon": "^6.3.4",
    "standard-version": "^4.2.0",
    "stream-buffers": "^3.0.1",
    "temp": "^0.8.3",
    "wrap-ansi": "^4.0.0"
  },
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 2.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/peerigon/updtr.git"
  },
  "files": [
    "bin",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 94,
        "functions": 94,
        "lines": 94,
        "statements": 94
      }
    }
  }
}
